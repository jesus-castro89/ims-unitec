{% extends 'base.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('category', {
        defer: true
    }) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('category') }}
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ url_for("dashboardIndex") }}"><span>Home</span></a>
    </li>
    <li class="breadcrumb-item active">
        <span>Categorías de Productos</span>
    </li>
{% endblock %}

{% block main %}
    <div>
        <a class="btn btn-primary" href="{{ url_for('categoryAdd') }}">Agregar Categoría</a>
    </div>
    <hr/>
    <div id="table-loader" loader="{{ full_url_for('categoryTable') }}"></div>
    <div id="wrapper"></div>
    <form id="entityForm" method="post" action="">
        <input type="hidden" name="id" id="idEntity" value=""/>
        <input type="hidden" id="editLink" value="{{ url_for("categoryEdit") }}"/>
    </form>
{% endblock %}
